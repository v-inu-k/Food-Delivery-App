<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        app:cardCornerRadius="15dp"
        android:padding="19dp"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">


            <TextView
                android:id="@+id/Food_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:text="Teriyaki Chicken smother"
                android:textColor="@color/salmon"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Food_Price"
                android:layout_below="@+id/Food_Name" android:layout_marginLeft="10dp"
                android:text="LKR 1000"
                android:textSize="14dp"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/Order_Minus_Button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@id/Food_Quantity"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Food_Quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_toLeftOf="@id/Order_Add_Button"
                android:layout_marginRight="12dp"
                android:text="1"
                android:textColor="@color/salmon"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/Order_Add_Button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentEnd="true"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:textStyle="bold" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>